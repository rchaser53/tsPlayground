{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "target": "es6",
    "allowJs":false,
    "jsx": "react",
    "module": "es6",
    "experimentalDecorators": true,
    "declaration":true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave":false,
  "exclude":["node_modules"],
  "lib":["es2015.promise","es2016.array.include"],
  "files": [
    "src/lib.d.ts",
    "typings/index.d.ts",
	"css/App.css.d.ts"
  ]
}
