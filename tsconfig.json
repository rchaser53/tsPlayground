{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "target": "es6",
    "allowJs":false,
    "jsx": "react",
    "module": "es2015",
    "experimentalDecorators": true,
    "declaration":true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave":false,
  "include":["src/**/*"],
  "exclude":["node_modules"],

  "files": [
    "src/declare.d.ts",
    "typings/index.d.ts"
  ]
}
