	{
	"compilerOptions": {
		"noImplicitAny": false,
		"removeComments": false,
		"noLib": false,
		"target": "es6",
		"allowJs":false,
		"jsx": "react",
		"module": "es6",
		"experimentalDecorators": true,
		"declaration":true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noEmit":false,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true
	},
	"compileOnSave":false,
	"lib":["es2015.promise","es2016.array.include"],
	"exclude":[
		"node_modules/**/*.ts"
	],
	"include":[
		"typings/**/*.ts",
		"css/**/*.ts",
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"awesomeTypescriptLoaderOptions": {}
}