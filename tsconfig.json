	{
	"compilerOptions": {
		"noImplicitAny": false,
		"removeComments": false,
		"noLib": false,
		"target": "es2015",
		"allowJs":false,
		"jsx": "react",
		"module": "commonjs",
		"experimentalDecorators": true,
		"declaration": true,
		"strictNullChecks": true,
		"noUnusedLocals": false,
		"noEmit": false,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"axios", "rxjs"
		],
		 "typeRoots" : ["./typings"]
	},
	"compileOnSave":false,
	"lib":["es2015.promise","es2016.array.include"],
	"exclude":[
		"node_modules/**/*.ts"
	],
	"include":[
		"typings/**/*.ts",
		"css/**/*.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"index.d.ts"
	],
	"awesomeTypescriptLoaderOptions": {}
}